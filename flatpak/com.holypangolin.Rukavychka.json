{
"app-id": "com.holypangolin.Rukavychka",
"runtime": "org.freedesktop.Platform",
"runtime-version": "19.08",
"sdk": "org.freedesktop.Sdk",
"command": "rukavychka",
"rename-icon": "rukavychka",
"rename-desktop-file": "rukavychka.desktop",
"finish-args": [
   "--socket=x11",
   "--socket=wayland",
   "--socket=pulseaudio",
   "--device=dri",
   "--share=ipc"
],
"cleanup": ["/include", "/lib/pkgconfig", "/lib/*.a", "/lib/*.la", "/share/aclocal", "/share/doc", "/bin/test_physfs"],
"modules": [
  {
    "name": "rukavychka",
    "buildsystem": "cmake-ninja",
    "build-options": {
       "config-opts": ["-DCMAKE_BUILD_TYPE=RelWithDebInfo", "-DLIBSUPERDERPY_EMBEDDED_ALLEGRO=ON", "-DGL_BUILD_TYPE=gles2+", "-DWANT_DEMO=OFF", "-DWANT_EXAMPLES=OFF", "-DALLEGRO_SDL=ON"]
    },
    "sources": [
      {
        "type": "dir",
        "path": ".."
      }
    ]
  }
]
}
